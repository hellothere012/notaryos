# =============================================================================
# NotaryOS Environment Variables
# =============================================================================
# Copy to .env and fill in your values.
# =============================================================================

# API Configuration
NOTARY_API_URL=https://api.agenttownsquare.com
NOTARY_API_KEY=notary_live_your_key_here

# Signing Configuration
RECEIPT_SIGNER_TYPE=ed25519
ED25519_KEY_ID=ed25519-key-v1
NOTARY_ENVIRONMENT=production

# Middleware Mode (shadow | opt-in | active)
NOTARY_MIDDLEWARE_MODE=shadow
NOTARY_MIDDLEWARE_ENABLED=true

# Rate Limiting
NOTARY_CIRCUIT_BREAKER_MS=200

# Notifications (optional)
NOTARY_NOTIFY_ENABLED=false
NOTARY_NOTIFY_MODE=human_facing

# UI Configuration
REACT_APP_API_URL=https://api.agenttownsquare.com
REACT_APP_NOTARY_PUBLIC_KEY_URL=https://api.agenttownsquare.com/v1/notary/public-key
